%section.container-fluid.form-and-summary
  .container
    = form_tag kinderfeesten_path, id: 'form-main', 'data-toggle': "validator", role: "form" do
      = hidden_field_tag :packetType, "Standaard Zwemfeestje"
      .row
        .col-sm-6.xs-extra-padding-bottom
          %h3 Aanvraag
          .form-group
            = email_tag
            = email_field
            .help-block.with-errors
          .form-group
            = date_tag
            = date_field
            .help-block.with-errors
          .form-group
            = time_tag
            .input-group.bootstrap-timepicker.timepicker
              = time_field
              %span.input-group-addon
                %i.glyphicon.glyphicon-time

              -# %span.add-on
              -#   %i.icon-time
            .help-block.with-errors
          .form-group
            = adults_tag
            = adults_field
            .help-block.with-errors

          .form-group
            = children_tag
            = children_field
            .help-block.with-errors

          .form-group
            = extra_tag
            = extra_field
            .help-block.with-errors

          .form-group.checkbox
            = checkbox_field
            = checkbox_tag
        
        .summary-view.col-sm-6
          %h3 Overzicht
          / This table is generated automatically.
          %table
          .small-note Dit overzicht wordt automatisch bijgewerkt.
          

      .row.final-button
        .form-group
          %button.btn.btn-primary{type: "submit"} Verstuur aanvraag

  / The modal for confirmation
  .modal.fade#confirmSubmission
    .modal-dialog
      .modal-content
        .modal-header
          %button.close{type: "button", 'data-dismiss': "modal", 'aria-hidden': "true"} x
          %h4.modal-title Bevestiging
        .modal-body
          Wil je deze aanvraag versturen?
          .form-horizontal
            .form-group
              %label.col-xs-4 Email
              .col-xs-8#modalEmail

            .form-group
              %label.col-xs-4 Omschrijving
              .col-xs-8#modalSummary

            .form-group
              %label.col-xs-4 Aantal volwassenen
              .col-xs-8#modalAdults

            .form-group
              %label.col-xs-4 Aantal kinderen
              .col-xs-8#modalChildren

            .form-group
              %label.col-xs-4 Totaalprijs
              .col-xs-8#modalPrice

            .form-group
              %label.col-xs-4 Datum
              .col-xs-8#modalDate

            .form-group
              %label.col-xs-4 Voorkeur lunchtijd
              .col-xs-8#modalTime

            .form-group
              %label.col-xs-4 Extra opmerkingen
              .col-xs-8#modalExtra
        .modal-footer
          %button.btn.btn-primary{type: "submit", form: "form-main"} Verstuur aanvraag
          %button.btn.btn-default{type: "button", 'data-dismiss': "modal"} Annuleer